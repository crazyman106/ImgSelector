<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.cusexcel.view.TableView
        android:id="@+id/table"
        android:layout_width="360dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        app:dividerColor="#e1e1e1"
        app:dividerWidth="1px"
        app:headerColor="#00ffffff"
        app:headerTextColor="#111111"
        app:headerTextSize="10dp"
        app:rowHeight="36dp"
        app:textColor="#999999"
        app:textSize="10dp"
        app:unitColumnWidth="0dp" />


    <LinearLayout
        android:id="@+id/row"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/table"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="行数:"
            android:textSize="13sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/row_subtract"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="－" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="0" />

            <TextView
                android:id="@+id/row_add"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="＋" />
        </LinearLayout>

        <TextView
            android:id="@+id/add_form"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="添加" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/column"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/row"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="列数:"
            android:textSize="13sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/column_subtract"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="－" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="0" />

            <TextView
                android:id="@+id/column_add"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="＋" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/form_inner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/column"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="表格线框:"
            android:textSize="13sp" />


        <Spinner
            android:id="@+id/innerLine"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:spinnerMode="dropdown" />

        <RadioGroup
            android:id="@+id/inner_color"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/inner_dark_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:checked="true" />

            <RadioButton
                android:id="@+id/inner_light_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />

            <RadioButton
                android:id="@+id/inner_dark_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/form_border"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/form_inner"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="表格外框:"
            android:textSize="13sp" />

        <Spinner
            android:id="@+id/outline"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:spinnerMode="dropdown" />

        <RadioGroup
            android:id="@+id/out_color"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/out_dark_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:checked="true" />

            <RadioButton
                android:id="@+id/out_light_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />

            <RadioButton
                android:id="@+id/out_dark_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />
        </RadioGroup>

    </LinearLayout>

    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@null"
        android:imeOptions="actionDone"
        android:inputType="textImeMultiLine"
        android:visibility="gone" />
</RelativeLayout>
