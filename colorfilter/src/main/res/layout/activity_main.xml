<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.administrator.colorfilter.LoadingProgressView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone" />

    <com.example.administrator.colorfilter.CusLightingColorFilter
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.example.administrator.colorfilter.CusView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.example.administrator.colorfilter.PorterDuffColorFilterView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:visibility="gone"

        />

    <com.example.administrator.colorfilter.BreakTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_share_blue"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/iv1"
            android:src="@drawable/ic_favorite_normal"
            android:visibility="gone" />
    </RelativeLayout>

    <com.example.administrator.colorfilter.LoadingView
        android:layout_width="200dp"
        android:layout_height="200dp" />
</RelativeLayout>
