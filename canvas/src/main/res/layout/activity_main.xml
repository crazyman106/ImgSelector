<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.youdianpinwei.myapplication.MainActivity">

    <com.youdianpinwei.myapplication.CusView
        android:id="@+id/cusview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <Button
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:onClick="matrixClick"
        android:visibility="gone" />

    <com.youdianpinwei.myapplication.PathViewTst
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.youdianpinwei.myapplication.BezierView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <com.youdianpinwei.myapplication.CubeBezierView
        android:id="@+id/cubeBezierView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone">

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/control1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="64dp" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/control2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp" />
    </RadioGroup>

    <com.youdianpinwei.myapplication.Bezier3
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
