<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tm_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="-10dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/tm_edittext_bg_normal"
        android:padding="2dp"
        android:text="fdasfasdf" />

    <ImageView
        android:id="@+id/tm_edittext_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/tm_edittext_delete" />

    <ImageView
        android:id="@+id/tm_edittext_transformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tm_edittext"
        android:layout_toRightOf="@+id/tm_edittext"
        android:src="@mipmap/tm_edittext_translate" />
</RelativeLayout>